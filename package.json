{
  "name": "@redaksjon/protokoll",
  "version": "0.0.9-dev.0",
  "description": "Focused audio transcription with intelligent context integration",
  "main": "dist/main.js",
  "type": "module",
  "bin": {
    "protokoll": "./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaksjon/protokoll.git"
  },
  "scripts": {
    "build": "npm run lint &&tsc --noEmit && vite build && copyfiles -u 1 \"src/**/*.md\" dist",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "focus",
    "productivity",
    "notes",
    "genai"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@riotprompt/riotprompt": "^0.0.8",
    "@theunwalked/cardigantime": "^0.0.16",
    "@theunwalked/dreadcabinet": "^0.0.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "commander": "^14.0.2",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2",
    "moment-timezone": "^0.6.0",
    "openai": "^6.9.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-replace": "^6.0.3",
    "@swc/core": "^1.15.1",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "mockdate": "^3.0.5",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.8"
  }
}
