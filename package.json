{
  "name": "@redaksjon/protokoll",
  "version": "1.0.13-dev.0",
  "description": "Focused audio transcription with intelligent context integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "protokoll-mcp": "./dist/mcp/server.js",
    "protokoll-mcp-http": "./dist/mcp/server-http.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redaksjon/protokoll.git"
  },
  "homepage": "https://github.com/redaksjon/protokoll",
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build && chmod +x dist/mcp/server.js dist/mcp/server-http.js",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run build && npm run test && npm run mcp:test",
    "prepublishOnly": "npm run clean && npm run build",
    "mcp:build": "npm run build && echo 'MCP server built'",
    "mcp:inspect": "npm run build && npx @modelcontextprotocol/inspector dist/mcp/server.js",
    "mcp:inspect:dev": "nodemon --watch src --ext ts --exec 'npm run mcp:inspect'",
    "mcp:test": "node scripts/test-mcp-compliance.js",
    "mcp:start": "node dist/mcp/server.js",
    "mcp:http": "node dist/mcp/server-http.js",
    "mcp:http:dev": "nodemon --watch src --ext ts,yaml,json --ignore 'src/**/*.test.ts' --exec 'npm run build && npm run mcp:http'",
    "fix-delimiters": "npm run build && node dist/scripts/fix-duplicate-delimiters.js",
    "fix-delimiters:dry-run": "npm run build && node dist/scripts/fix-duplicate-delimiters.js --dry-run",
    "migrate-titles": "npm run build && node dist/scripts/migrate-titles-to-frontmatter.js",
    "migrate-titles:dry-run": "npm run build && node dist/scripts/migrate-titles-to-frontmatter.js --dry-run",
    "migrate:2025": "npm run build && node dist/scripts/migrate-transcripts-2025.js",
    "migrate:2025:dry-run": "npm run build && node dist/scripts/migrate-transcripts-2025.js --dry-run",
    "migrate:2025:test": "npm run build && node dist/scripts/migrate-transcripts-2025.js --dry-run --limit 10 --verbose",
    "migrate:2025:verify": "npm run build && node dist/scripts/verify-migration-2025.js"
  },
  "keywords": [
    "focus",
    "productivity",
    "notes",
    "genai"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@kjerneverk/riotprompt": "^1.0.6",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@redaksjon/context": "file:../redaksjon-context",
    "@redaksjon/protokoll-engine": "^0.1.3",
    "@redaksjon/protokoll-format": "file:../protokoll-format",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@utilarium/cardigantime": "^0.0.24",
    "@utilarium/dreadcabinet": "^0.0.16",
    "@utilarium/overcontext": "^0.0.4",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "fluent-ffmpeg": "^2.1.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "html-to-text": "^9.0.5",
    "js-yaml": "^4.1.1",
    "luxon": "^3.7.2",
    "moment-timezone": "^0.6.0",
    "openai": "^6.22.0",
    "winston": "^3.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@swc/core": "^1.15.1",
    "@types/html-to-text": "^9.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "mockdate": "^3.0.5",
    "nodemon": "^3.1.11",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.8"
  }
}
